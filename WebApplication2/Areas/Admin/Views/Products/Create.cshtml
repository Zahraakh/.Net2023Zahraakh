@model Product

@{
    ViewData["Title"] = "Create Product";
}

<h1 style="color:white;font-size:40px;text-align:center; font-family: Segoe Print" sans-serif;">Create Product</h1>


<div class="row">
    <div class="col-md-10">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            

            <div class="form-group">
                <label style="font-size:30px; color:white;" asp-for="Name" class="control-label"></label>
                <input style=" border:none;background:transparent;width:100%;border:2px solid rgba(255, 255, 255, .2);transition: background .5s;color:white ;padding: 0 2rem; height:50px;text-align: center ;border-radius: 100px; " asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label style="font-size:30px; color:white;" asp-for="Description" class="control-label"></label>
                <textarea style=" border:none;background:transparent;width:100%;border:2px solid rgba(255, 255, 255, .2);transition: background .5s;color:white ;padding: 0 2rem; height:50px;text-align: center ;border-radius: 100px; " asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="font-size:30px; color:white;" asp-for="Price" class="control-label"></label>
                <input style=" border:none;background:transparent;width:100%;border:2px solid rgba(255, 255, 255, .2);transition: background .5s;color:white ;padding: 0 2rem; height:50px;text-align: center ;border-radius: 100px; " asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="font-size:30px; color:white;" asp-for="CategoryId" class="control-label"></label>
                <select style=" border:none;background:transparent;width:100%;border:2px solid rgba(255, 255, 255, .2);transition: background .5s ;padding: 0 2rem; height:50px;text-align: center ;border-radius: 100px; " asp-for="CategoryId" asp-items="@ViewBag.CategoryId" class="form-control">
                     <option value="0"> Choose a category</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="font-size:30px; color:white;" asp-for="Image" class="control-label">Product Image</label>
                <input style=" border:none;background:transparent;width:100%;border:2px solid rgba(255, 255, 255, .2);transition: background .5s;color:white ;padding: 0 2rem; height:50px;text-align: center ;border-radius: 100px; " asp-for="ImageUpload" class="form-control" />
                <img src="" id="imgpreview" class="pt-2" alt="" />
                <span asp-validation-for="ImageUpload" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input style="border:none;padding:10px 10px;font-size:18px;height:50%;background:linear-gradient(45deg,#f2ff97, #9ed79a);color:#f59159;border-radius:100px;text-align:center;width:30%; margin:25px;cursor:point;font-family: Segoe Print" sans-serif;"  type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div  style="border:none;font-size:20px;width:20%;text-align:center;text-transform:uppercase;cursor:pointer ;font-family: Segoe Print" sans-serif;">
    <a  style="color:white" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        CKEDITOR.replace("Description");

        $("#ImageUpload").change(function (){
            readURL(this);
        });
    </script>
}