@model string

@{
    ViewData["Title"] = "Create a role";
}

<h1 style="color:white;font-size:40px;text-align:center; font-family: Segoe Print" sans-serif;">Create a role</h1>

<div class="row">
    <div class="col-md-10">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label style="font-size:30px; color:white;"  class="control-label">Role name</label>
                <input style=" border:none;background:transparent;width:100%;border:2px solid rgba(255, 255, 255, .2);transition: background .5s;color:white ;padding: 0 2rem; height:50px;text-align: center ;border-radius: 100px; " type="text" name="name" class="form-control" />
             
            </div>
            <div class="form-group">
                <input style="border:none;padding:10px 10px;font-size:18px;height:50%;background:linear-gradient(45deg,#f2ff97, #9ed79a);color:#f59159;border-radius:100px;text-align:center;width:30%; margin:25px;cursor:point;font-family: Segoe Print" sans-serif;" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div  style="float:right;border:none;font-size:20px;width:20%;text-align:center;text-transform:uppercase;cursor:pointer ;font-family: Segoe Print" sans-serif;">
    <a  style="color:white" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


