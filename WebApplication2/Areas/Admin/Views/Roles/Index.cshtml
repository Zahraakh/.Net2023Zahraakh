@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Roles";
}

<h1 style="font-size:30px;text-align:center;color:#f59159;font-family: Segoe Print" sans-serif;">Roles</h1>

<p>
    <a style="border:none; background:linear-gradient(45deg,#ffea66, #f59159);
color:white;
padding:0.7rem;
border-radius:100px;
text-align:center;
text-transform:uppercase;
font-size:18px;
height:55px;
width:150px;
cursor:pointer;" asp-action="Create">Create New</a>
</p>
<table style="color:white; font-size:20px;font-family: Segoe Print" sans-serif;" class="table">
    <thead>
        <tr>
            
            <th>
                Role
            </th>
            <th>
                Users
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>

                
                <td>
                    @role.Name
                </td>
                <td user-role="@role.Id">
                </td>

                <td>
                    <a style="border:none; background:linear-gradient(45deg,#ff6f3c, #f1ffab);

padding:0.5rem;
border-radius:70px;
text-align:center;
text-transform:uppercase;
font-size:18px;
height:55px;
width:150px;
cursor:pointer;color:white ;font-family: Segoe Print" sans-serif;" asp-action="Edit" asp-route-id="@role.Id">Edit </a> |
                    <a style="border:none; background:linear-gradient(45deg,#f2ff97, #ff6f3c);

padding:0.5rem;
border-radius:70px;
text-align:center;
text-transform:uppercase;
font-size:18px;
height:55px;
width:150px;
cursor:pointer;color:white;font-family: Segoe Print" sans-serif;" class="confirmDeletion" asp-action="Delete" asp-route-id="@role.Id"> Delete </a>
                   

                </td>
            </tr>
        }
    </tbody>
</table>




