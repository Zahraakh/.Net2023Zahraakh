@model UserEdit

@{
    ViewData["Title"] = "Edit Account";
}



<h1 style="font-size:40px;color:white; background-image:url('.. /../wwwroot/images/background.jpg') no-repeat;background-size:100% 100%; ">Edit Account</h1>
<body style=" background-image:url('../../wwwroot/images/background.jpg');background-size:90% 100%; padding: 0;
    margin: 0;color:white;
    font-family: Segoe Print" sans-serif;">
<div style="border-radius: 10px;overflow:hidden;" class="container">
    <div class="col-md-10">
        <div class="login-left">
         <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label style="font-size:30px; color:white;" asp-for="Email" class="control-label"></label>
                <input style="  border:none;background:transparent;width:100%;border:2px solid rgba(255, 255, 255, .2);transition: background .5s;color:white ;padding: 0 2rem; height:50px;text-align: center ;border-radius: 100px;" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label style="font-size:30px; color:white;" asp-for="Password" class="control-label"></label>
                <input style="  border:none;background:transparent;width:100%;border:2px solid rgba(255, 255, 255, .2);transition: background .5s;color:white ;padding: 0 2rem; height:50px;text-align: center ;border-radius: 100px;" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
                       
            </div>
            <div class="form-group">
                <button style="border:none; background-color:#d90090;
color:white;
padding:1rem;
border-radius:100px;
text-align:center;
text-transform:uppercase;
font-size:18px;
height:55px;
width:150px;
cursor:pointer;" type="submit" value="Edit"  > Edit</button>
            </div>
         </form>
        </div>
    </div>
</div>
</body>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

