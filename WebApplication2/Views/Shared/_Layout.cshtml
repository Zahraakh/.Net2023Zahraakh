<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title style="font-family: Segoe Print" sans-serif;">@ViewData["Title"] - CmsShoppingCart</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
   
</head>

<body style=" background-image:url( 'https://images.freecreatives.com/wp-content/uploads/2016/04/Awesome-Website-Background1.jpg');font-family: Segoe Print" sans-serif;">
    <header >
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CmsShoppingCart</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1 justify-content-end">

                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {

                           
                            <li class="nav-item">
                                <a asp-controller="Account" asp-action="Edit" style="border:none; background:linear-gradient(45deg,#f15f79, #c2e59c);

font-family: Segoe Print" sans-serif;
padding:1rem;
border-radius:100px;
text-align:center;
text-transform:uppercase;
font-size:18px;
height:55px;
width:150px;
cursor:pointer;" class="btn btn-primary">
                                    My Account</a>
                            </li>

                            <li class="nav-item ml-1">
                                <a asp-controller="Account" asp-action="Login" style="border:none; background:linear-gradient(45deg, #c2e59c,#ff9933);
                                <a asp-controller="Account" asp-action="Logout" style="border:none;background:linear-gradient(#c2e59c,#ff9933);
color:#ffea66;
font-family: Segoe Print" sans-serif;
                                   padding:1rem;
                                   border-radius:100px;
                                   text-align:center;
                                   text-transform:uppercase;
                                   font-size:18px;
                                   height:55px;
                                   width:150px;
                                   cursor:pointer;" class="btn btn-danger">
                                    Hi, @User.Identity.Name , Log out</a>
                            </li>

                            @if (User.IsInRole("admin") || User.IsInRole("editor")){
                                <li class="nav-item ml-1">
                                    <a asp-area="Admin" asp-controller="Pages" asp-action="Index" style="border:none; background:linear-gradient(45deg,#ff9933,#999933);
color:#ffea66;
font-family: Segoe Print" sans-serif;
                                       padding:1rem;
                                       border-radius:100px;
                                       text-align:center;
                                       text-transform:uppercase;
                                       font-size:18px;
                                       height:55px;
                                       width:150px;
                                       cursor:pointer;" class="btn btn-success">Admin Area</a>
                                </li>
                            }

                        }
                        else{
                           <li class="nav-item">
                                <a asp-controller="Account" asp-action="Login" style="border:none; background:linear-gradient(45deg,#f15f79,#ff9933);
color:#ffea66;
font-family: Segoe Print" sans-serif;
                                   padding:1rem;
                                   border-radius:100px;
                                   text-align:center;
                                   text-transform:uppercase;
                                   font-size:18px;
                                   height:70px;
                                   width:170px;
                                   cursor:pointer;" class="btn btn-primary">Log in</a>
                           </li>
                           <li class="nav-item ml-1">
                                <a asp-controller="Account" asp-action="Register" style="border:none;background:linear-gradient(45deg,#ff9933, #999933);
color:#ffea66;
font-family: Segoe Print" sans-serif;
                                   padding:1rem;
                                   border-radius:100px;
                                   text-align:center;
                                   text-transform:uppercase;
                                   font-size:18px;
                                   height:55px;
                                   width:150px;
                                   cursor:pointer;" class="btn btn-primary">Register</a>
                           </li>
                        }
                    </ul>

                    <ul class="navbar-nav flex-grow-1">

                        @await Component.InvokeAsync("MainMenu")
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div style="font-family: Segoe Print" sans-serif;" class="container">
        <main role="main" class="pb-3">
            <partial name="_NotificationPartial" />
            <div class="row">
                <div class="col-3">
                    @await Component.InvokeAsync("Categories")
                    
                    <div style="border:none; background-image:linear-gradient(to right,#b24592, #f15f79);color:#ffea66;" class="smallcart mt-3 p-3 text-white">
                        @await Component.InvokeAsync("SmallCart")

                    </div>
                </div>
                <div class="col">
                    @RenderBody()
                </div>

            </div>
            
        </main>
    </div>

    <footer style="font-family: Segoe Print" sans-serif;" class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - CmsShoppingCart - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
